<h2>
  <span class="font-serif font-bold mr-2" id="exprience"> </span>
  YEARS EXP
</h2>
<script is:inline>
  function calculateYearsDifference(startDate) {
    // Convert dates to milliseconds
    const startMs = startDate.getTime();
    const endMs = new Date().getTime();

    // Calculate difference in milliseconds
    const diffMs = endMs - startMs;

    // Convert milliseconds to years (considering leap years)
    const diffDays = diffMs / (1000 * 60 * 60 * 24);
    const diffYears = diffDays / 365.2425; // Average number of days in a year

    return diffYears;
  }
  const element = document.getElementById("exprience");
  element.textContent = calculateYearsDifference(new Date("4/6/2022")).toFixed(
    1,
  );
</script>
