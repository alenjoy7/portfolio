---
import { Image } from "astro:assets";
import Experience from "./Experience.astro";
import heroImage from "../assets/hero-img-text.png";
import LandingImage from "../assets/LandingImage.astro";
---

<section class="h-[100svh] font-chakie flex flex-col justify-between">
  <div>
    <div class="fixed left-0 right-0 pt-52 lg:pt-12 animation-scroll-title">
      <div class="sub-heading flex justify-between animate-fadeInTop">
        <h2>Hello World</h2>
        <h2>SOFTWARE DEVELOPER</h2>
      </div>
      <h1
        class="hero-heading flex animate-typing overflow-hidden whitespace-nowrap max-w-fit mx-auto"
      >
        PORT <div class="hero-text-gap"></div><span>FOLIO</span>
      </h1>
      <div class="sub-heading flex justify-between animate-fadeIn">
        <h2>ALEN JOY</h2>
        <Experience />
      </div>
      <Image
        src={heroImage}
        alt="ballon with star"
        loading={"eager"}
        width={208}
        class="image absolute top-56 lg:top-12 left-0 right-8 md:right-32 mx-auto animate-fadeInImage"
      />
    </div>
  </div>
  <!-- dark:fill-[#372D3B] -->
  <div class="w-full relative">
    <LandingImage className={"fill-gray-700 dark:fill-gray-800 "} />
    <div
      class="-my-1 h-72 sm:h-20 md:h-10 lg:h-1 bg-gray-700 dark:bg-gray-800 text-white"
    >
      <div class="text-center font-sans sm:hidden">
        <h1 class="text-2xl font-semibold text-green-400">ALEN JOY</h1>
        <p class="text-amber-400">Fullstack Developer</p>

        <p class="mt-4 text-inherit text-balance">
          I'm a Fullstack Developer specializing in Next.js and React for web
          applications. I leverage Node.js, SuperTokens, Tailwind CSS, and Astro
          to create responsive, visually appealing solutions while continually
          enhancing my skills with new technologies..
        </p>
      </div>
    </div>
  </div>
</section>
<style>
  .hero-heading {
    font-size: clamp(4rem, -5.286rem + 24.762vw, 17rem);
    line-height: clamp(4rem, -3.857rem + 20.952vw, 15rem);
  }
  .hero-text-gap {
    width: clamp(16px, -18.288px + 5.714vw, 64px);
  }
  .image {
    width: clamp(40px, -80px + 20vw, 208px);
  }
  .sub-heading {
    padding-inline: clamp(2.5rem, -1.429rem + 10.476vw, 8rem);
    font-size: clamp(1rem, 0.107rem + 2.381vw, 2.25rem);
  }
  @keyframes spin {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
      transform: scale(0.1);
    }
  }
  @media (prefers-reduced-motion: no-preference) {
    @supports (animation-timeline: scroll()) {
      .animation-scroll-title {
        animation: spin linear both;
        animation-timeline: scroll();
      }
    }
  }
</style>
